<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

        <field name="id" type="hidden" default="0" label="COM_EVENT_MANAGE_FORM_LBL_EVENT_ID"
            readonly="true" class="readonly"            
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_EVENT_MANAGE_FORM_LBL_EVENT_CREATED_BY"
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_CREATED_BY"  /> 

        <field name="selfpromote" type="radio" required="true" default="" label="Do you intend to hire out a performance venue to self-promote or stage your own performance?" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="harmlessorindemnity" type="radio" required="true" default="" label="Will you be signing any contracts that contain hold harmless or indemnity agreements?" description="">
           <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="subcontractors" type="radio" required="true" default="" label="Do you use subcontractors?" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="refusedinsurance" type="radio" required="true" default="" label="Have you previously been refused insurance or had your insurance cancelled by an insurer or have had special conditions, increased premiums or increased excesses imposed on any policy of insurance by an insurer?" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="liabilityclaim" type="radio" required="true" default="" label="Have you suffered any public liability claims or have caused incidents that give rise to public liability claim?" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="criminaloffence" type="radio" required="true" default="" label="Have you been charged or convicted of a criminal offence (excluding driving convictions) in the last 10 years?" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="dangerousactivities" type="radio" required="true" default="" label="Audience participation with use of fire, sporting, hazardous or dangerous activities" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="pyrotechnics" type="radio" required="true" default="" label="Fireworks or pyrotechnics" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="animals" type="radio" default="" required="true" label="Use of animals" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="amusementrides" type="radio" required="true" default="" label="Use of amusement rides or devices" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="workshops" type="radio" required="true" default="" label="Running of workshops" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="northamerica" type="radio" required="true" default="" label="Any activities conducted in North America" description="">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </field>

        <field name="next" type="submit" 
            value= "NEXT"                           
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_NEXT" 
                 />
                         
        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            size="1"
            default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field> 
    
    </fieldset>

</form>