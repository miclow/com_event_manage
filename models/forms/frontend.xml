<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_EVENT_MANAGE_FORM_LBL_EVENT_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_EVENT_MANAGE_FORM_LBL_EVENT_CREATED_BY"
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_CREATED_BY"  /> 

       <field name="name" type="text"
                
            label="COM_EVENT_MANAGE_FORM_LBL_EVENT_NAME"
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_NAME" 
                
                
                 /> 

       <field name="start_date" type="text"
                
            label="COM_EVENT_MANAGE_FORM_LBL_EVENT_START_DATE"
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_START_DATE" 
                
                
                 /> 

       <field name="end_date" type="text"
                
            label="COM_EVENT_MANAGE_FORM_LBL_EVENT_END_DATE"
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_END_DATE" 
                
                
                 /> 

       <field name="description" type="textarea"
                
            label="COM_EVENT_MANAGE_FORM_LBL_EVENT_DESCRIPTION"
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_DESCRIPTION" 
                
                
                 /> 

       <field name="prize" type="text"
                
            label="COM_EVENT_MANAGE_FORM_LBL_EVENT_PRIZE"
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_PRIZE" 
                
                
                 /> 

       <field name="terms" type="text"
                
            label="COM_EVENT_MANAGE_FORM_LBL_EVENT_TERMS"
            description="COM_EVENT_MANAGE_FORM_DESC_EVENT_TERMS" 
                
                
                 /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
